5], 2):\n    X_engineered[f\"{col1}_x_{col2}\"] = X_engineered[col1] * X_engineered[col2]\n    X_test_engineered[f\"{col1}_x_{col2}\"] = X_test_engineered[col1] * X_test_engineered[col2]\n\nfor col in numeric_features[:5]:\n    X_engineered[f\"{col}_sq\"] = X_engineered[col] ** 2\n    X_test_engineered[f\"{col}_sq\"] = X_test_engineered[col] ** 2\n\nX = X_engineered\nX_test = X_test_engineered\n\nnumeric_features = X.select_dtypes(include=[np.number]).columns.tolist()\ncategorical_features = X.select_dtypes(exclude=[np.number]).columns.tolist()\n\nif ID_COL in numeric_features:\n    numeric_features.remove(ID_COL)\n\nprint(\"After feature engineering:\")\nprint(\"Total features:\", len(X.columns))\n","metadata":{"trusted":true,"execution":{"iopub.status.busy":"2025-11-27T16:06:04.327658Z","iopub.execute_input":"2025-11-27T16:06:04.327930Z","iopub.status.idle":"2025-11-27T16:06:04.609778Z","shell.execute_reply.started":"2025-11-27T16:06:04.327896Z","shell.execute_reply":"2025-11-27T16:06:04.609180Z"}},"outputs":[{"name":"stdout","text":"After feature engineering:\nTotal features: 27\n","output_type":"stream"}],"execution_count":4},{"cell_type":"markdown","source":"# CatBoost Model (CV + Full Training + Submission)","metadata":{}},{"cell_type":"code","source":"# CHUNK 5 — CatBoost Model (CV + Final Training + Submission)\n\nfrom sklearn.model_selection import StratifiedKFold\nfrom sklearn.metrics import roc_auc_score\n\ncat_features = [col for col in X.columns if X[col].dtype == \"object\"]\nprint(f\"Categorical features detected: {len(cat_features)}\")\n\ncv = StratifiedKFold(n_splits=5, shuffle=True, random_state=RANDOM_STATE)\noof = np.zeros(len(X))\n\nprint(\"Training CatBoost with 5-Fold CV...\")\n\nfor fold, (train_idx, val_idx) in enumerate(cv.split(X, y), 1):\n    X_tr = X.iloc[train_idx]\n    y_tr = y.iloc[train_idx]\n    X_val = X.iloc[val_idx]\n    y_val = y.iloc[val_idx]\n\n    train_pool = Pool(X_tr, y_tr, cat_features=cat_features)\n    val_pool   = Pool(X_val, y_val, cat_features=cat_features)\n\n    model_cb = CatBoostClassifier(\n        iterations=1500,\n        depth=8,\n        learning_rate=0.03,\n        l2_leaf_reg=3,\n        loss_function='Logloss',\n        eval_metric='AUC',\n        random_seed=RANDOM_STATE + fold,\n        verbose=False\n    )\n\n    model_cb.fit(train_pool, eval_set=val_pool)\n\n    preds = model_cb.predict_proba(X_val)[:, 1]\n    oof[val_idx] = preds\n\n    auc = roc_auc_score(y_val, preds)\n    print(f\"Fold {fold} ROC AUC: {auc:.5f}\")\n\noof_auc = roc_auc_score(y, oof)\nprint(f\"OOF ROC AUC: {oof_auc:.5f}\")\n\n# ---- Train Final Model on Full Data ---- #\n\nfinal_model = CatBoostClassifier(\n    iterations=1500,\n    depth=8,\n    learning_rate=0.03,\n    l2_leaf_reg=3,\n    loss_function='Logloss',\n    eval_metric='AUC',\n    random_state=RANDOM_STATE,\n    verbose=False\n)\n\nfull_pool = Pool(X, y, cat_features=cat_features)\nfinal_model.fit(full_pool)\n\n# ---- Predict on Test and Create Submission ---- #\n\ntest_pool = Pool(X_test, cat_features=cat_features)\ntest_preds = final_model.predict_proba(test_pool)[:, 1]\n\nsubmission = pd.DataFrame({\n    \"id\": test[\"id\"],\n    \"loan_paid_back\": test_preds\n})\n\nsubmission.to_csv(\"submission.csv\", index=False)\n\nprint(\"✓ submission.csv created!\")\ndisplay(submission.head())\n","metadata":{"trusted":true,"execution":{"iopub.status.busy":"2025-11-27T16:06:04.610418Z","iopub.execute_input":"2025-11-27T16:06:04.610661Z"}},"outputs":[{"name":"stdout","text":"Categorical features detected: 6\nTraining CatBoost with 5-Fold CV...\nFold 1 ROC AUC: 0.92157\nFold 2 ROC AUC: 0.92137\nFold 3 ROC AUC: 0.91977\nFold 4 ROC AUC: 0.92059\nFold 5 ROC AUC: 0.92017\nOOF ROC AUC: 0.92069\n","output_type":"stream"}],"execution_count":null}]}